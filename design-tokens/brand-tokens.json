{
  "velobar": {
    "brand": {
      "name": "Velo.Bar",
      "tagline": "Mobile Cocktailbar & Event Catering"
    },
    "colors": {
      "primary": {
        "black": {
          "value": "#000000",
          "description": "Primary brand black for backgrounds"
        },
        "white": {
          "value": "#FFFFFF",
          "description": "Pure white for text and backgrounds"
        },
        "coral": {
          "value": "#ef7262",
          "description": "Accent coral for CTAs and highlights"
        },
        "muted": {
          "value": "#bbbbbb",
          "description": "Muted gray for secondary text"
        }
      },
      "semantic": {
        "background": {
          "primary": "#FFFFFF",
          "dark": "#000000",
          "overlay": "rgba(0, 0, 0, 0.7)"
        },
        "text": {
          "primary": "#000000",
          "onDark": "#FFFFFF",
          "secondary": "rgba(0, 0, 0, 0.8)",
          "muted": "#bbbbbb"
        },
        "accent": {
          "primary": "#ef7262",
          "hover": "rgba(239, 114, 98, 0.8)",
          "active": "rgba(239, 114, 98, 0.9)"
        }
      }
    },
    "typography": {
      "fonts": {
        "heading": {
          "family": "'Source Sans Pro', 'proxima-nova', sans-serif",
          "fallback": "sans-serif",
          "description": "Clean sans-serif for all text (similar to proxima-nova)"
        },
        "body": {
          "family": "'Source Sans Pro', 'proxima-nova', sans-serif",
          "fallback": "sans-serif"
        }
      }
    },
    "spacing": {
      "base": "0.5rem",
      "note": "8px increment system - base is 8px",
      "scale": {
        "1": "0.5rem",
        "2": "1rem",
        "3": "1.5rem",
        "4": "2rem",
        "6": "3rem",
        "8": "4rem",
        "10": "5rem",
        "12": "6rem"
      }
    },
    "layout": {
      "breakpoints": {
        "mobile": {
          "min": "320px",
          "max": "767px"
        },
        "tablet": {
          "min": "768px",
          "max": "1199px"
        },
        "desktop": {
          "min": "1200px",
          "note": "Desktop starts at 1200px"
        }
      }
    }
  }
}
