# ===========================================
# Velo Bar Environment Variables
# ===========================================
# Copy this file to .env.local and fill in values
# NEVER commit .env.local or any file containing actual secrets

# ===========================================
# GMAIL SMTP (FREE, NO API KEY)
# ===========================================
# Enable 2FA on your Gmail, then create an App Password:
# Google Account → Security → 2-Step Verification → App passwords
GMAIL_USER="your-gmail@gmail.com"
GMAIL_PASS="your-gmail-app-password"

# Email configuration
BOOKING_FROM_EMAIL="Velo Bar Booking <booking@velo-bar.com>"
BOOKING_REPLY_TO_EMAIL="booking@velo-bar.com"

# Location-based inbox routing
BOOKING_TO_MUNICH="Muenchen@velo-bar.com"
BOOKING_TO_COBURG="coburg@velo-bar.com"

# ===========================================
# OPTIONAL: Legacy email providers (if not using Resend)
# ===========================================
# VITE_SENDGRID_API_KEY=
# VITE_MAILGUN_API_KEY=
# VITE_MAILGUN_DOMAIN=
# VITE_AWS_SES_ACCESS_KEY=
# VITE_SMTP_HOST=

# ===========================================
# OTHER SERVICES
# ===========================================
# VITE_ZOHO_CLIENT_ID=
# VITE_ZOHO_CLIENT_SECRET=
# Allowed origins for CORS (comma separated)
VITE_ALLOWED_ORIGINS="https://www.velo-bar.com,https://staging.velo-bar.com"
ALLOWED_ORIGINS="https://www.velo-bar.com,https://staging.velo-bar.com"
# Site canonical (used for canonical tags, OG, JSON-LD)
VITE_SITE_URL="https://www.velo-bar.com"
# Rate limiting for public forms (requests per window)
RATE_LIMIT_MAX="30"
RATE_LIMIT_WINDOW="600" # seconds
# Performance feature flags (default OFF)
VITE_PERF_HERO_SVG="false"
VITE_PERF_MARQUEE_DEFER="false"
